@page "/ModelViewer"
@inject IJSRuntime JSRuntime

<h3>Minimal VAT Viewer (FBX)</h3>

<p>A static FBX model animated by a position texture.</p>

<canvas id="vat-minimal-fbx-canvas" width="800" height="600" style="border: 1px solid black;"></canvas>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            float frame = 100.0f;

            // ★★★ JS関数名と、モデルのパスをFBX用に修正 ★★★
            await JSRuntime.InvokeVoidAsync("initVatMinimalSceneFbx",
                "vat-minimal-fbx-canvas",
                "models/Cube.fbx",      // FBXモデルのパス
                "textures/Cube_pos.exr",
                frame);
        }
    }
}